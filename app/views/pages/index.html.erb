<div id='page_1'>

  <div class="navbar">

    <div id='login_but'>
      Login
    </div>

    <%= form_for @user, url: {action: "login", :controller=>"users"}, html: {class: "login_index"} do |f|  %>
    <%= f.text_field :email, placeholder: "Email" %>
    <%= f.password_field :password_digest, placeholder: "Password" %>
    <%= f.submit "Log in!" %>
    <% end %>

  </div>


  <div class="container">

    <h1> Welcome to my Website, Be Cool. </h1>



    <div id='signup_but'>
      <h2>Hey, Sign up.</h2>
    </div>

    <%= form_for @user, url: {action: "signup", :controller=>"users"}, html: {class: "signup_index"} do |f|  %>
    <%= f.text_field :username, placeholder: "Username" %>
    <%= f.email_field :email, placeholder: "Email" %>
    <%= f.password_field :password, placeholder: "Password" %>
    <%= f.submit "Sign up!" %>
    <% end %>


    <div id='music_div'>
      <h2>Music</h2>
    </div>

    <div id='philosophy_div'>
      <h2>Philosophy</h2>
    </div>

    <div id='art_div'>
      <h2>Art</h2>
    </div>

  </div>


</div>

